{% extends "base.html.j2" %}

{% block title %}{{ page_title | default("Manage API Tokens") }} - {{ super() }}{% endblock %}

{% block title_header %}Manage API Tokens{% endblock %}

{% block main_content %}
{# server_url is no longer needed here as JS uses relative paths #}
<div class="container mt-4">
    <p>API tokens allow applications or scripts to authenticate as you. Treat them like passwords.</p>

    <hr>

    <h4>Create New API Token</h4>
    <form id="createTokenForm" class="mb-4">
        <div class="mb-3">
            <label for="tokenName" class="form-label">Token Name</label>
            <input type="text" class="form-control" id="tokenName" name="name" required placeholder="e.g., Home Assistant Script">
            <div class="form-text">A descriptive name to help you remember the token's purpose.</div>
        </div>
        <div class="mb-3">
            <label for="tokenExpiresAt" class="form-label">Expires At (Optional)</label>
            <input type="datetime-local" class="form-control" id="tokenExpiresAt" name="expires_at">
            <div class="form-text">Leave blank for no expiration. If set, the token will stop working after this date and time (UTC).</div>
        </div>
        <button type="submit" class="btn btn-primary">Create Token</button>
    </form>

    <div id="newTokenSection" class="alert alert-warning" style="display:none;">
        <h5>New API Token Generated!</h5>
        <p><strong>Important:</strong> This is the only time your token will be shown. Copy it now and store it securely.</p>
        <div class="input-group mb-3">
            <input type="text" id="newTokenValue" class="form-control" readonly>
            <button class="btn btn-outline-secondary" type="button" id="copyTokenButton">Copy</button>
        </div>
        <p id="copyMessage" class="form-text" style="display:none; color: green;">Copied to clipboard!</p>
    </div>

    <div id="errorMessage" class="alert alert-danger" style="display:none;">
        <!-- Error messages will be displayed here -->
    </div>


    <hr>

    <h4>Your Existing API Tokens</h4>
    {% if tokens %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Prefix</th>
                    <th>Created At (UTC)</th>
                    <th>Expires At (UTC)</th>
                    <th>Last Used (UTC)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for token in tokens %}
                <tr>
                    <td>{{ token.name }}</td>
                    <td><code>{{ token.prefix }}...</code></td>
                    <td>{{ token.created_at.strftime('%Y-%m-%d %H:%M:%S') if token.created_at else 'N/A' }}</td>
                    <td>{{ token.expires_at.strftime('%Y-%m-%d %H:%M:%S') if token.expires_at else 'Never' }}</td>
                    <td>{{ token.last_used_at.strftime('%Y-%m-%d %H:%M:%S') if token.last_used_at else 'Never' }}</td>
                    <td>
                        {% if token.is_revoked %}
                            <span class="badge bg-danger">Revoked</span>
                        {% elif token.expires_at and token.expires_at < now_utc %}
                            <span class="badge bg-warning text-dark">Expired</span>
                        {% else %}
                            <span class="badge bg-success">Active</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if not token.is_revoked %}
                        <form action="{{ request.app.url_path_for('ui_revoke_api_token', token_id=token.id) }}" method="post" style="display:inline;">
                            <!-- Consider adding CSRF token here if your app uses them -->
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to revoke this token? This action cannot be undone.');">Revoke</button>
                        </form>
                        {% else %}
                        -
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <p>You have not created any API tokens yet.</p>
    {% endif %}

</div>
{% endblock %}

{% block scripts_extra %}
<script src="{{ request.app.url_path_for('static', path='js/api_token_management.js') }}"></script>
{% endblock %}
