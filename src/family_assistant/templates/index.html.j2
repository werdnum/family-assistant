{% extends "base.html.j2" %}

{% block title_header %}Notes{% endblock %}

{% block header_content %}
    <a href="{{ request.app.url_path_for('ui_add_note') }}" class="button-link add-button">Add New Note</a>
{% endblock %}

{% block main_content %}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for note in notes %}
            <tr>
                <td>{{ note.title }}</td>
                <td class="note-status">
                    {% if note.include_in_prompt %}
                        <span class="status-badge status-included" title="Included in system prompt">✓ In Prompt</span>
                    {% else %}
                        <span class="status-badge status-excluded" title="Excluded from system prompt, but searchable">◯ Searchable</span>
                    {% endif %}
                </td>
                <td><pre>{{ note.content }}</pre></td>
                <td class="note-actions">
                    <a href="{{ request.app.url_path_for('ui_edit_note', title=note.title) }}" class="button-link">Edit</a>
                    <form action="{{ request.app.url_path_for('ui_delete_note', title=note.title) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this note?');">
                        <button type="submit" class="secondary">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">No notes found.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
