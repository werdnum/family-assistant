{% extends "base.html.j2" %}

{% block title_header %}Message History{% endblock %}

{% block main_content %}
    <!-- Filter Form -->
    <form id="filter-form" class="filter-form" method="get" action="{{ url_for('ui_message_history') }}">
        <div class="filter-row">
            <div class="filter-group">
                <label for="interface-type-filter">Interface Type:</label>
                <select id="interface-type-filter" name="interface_type">
                    <option value="">All</option>
                    {% for interface in interface_types %}
                    <option value="{{ interface }}" {% if request.query_params.get('interface_type') == interface %}selected{% endif %}>{{ interface }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="filter-group">
                <label for="conversation-filter">Conversation:</label>
                <select id="conversation-filter" name="conversation_id">
                    <option value="">All</option>
                    {% for conv_id in conversation_ids %}
                    <option value="{{ conv_id }}" {% if request.query_params.get('conversation_id') == conv_id %}selected{% endif %}>{{ conv_id }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="filter-group">
                <label for="date-from-filter">From:</label>
                <input type="datetime-local" id="date-from-filter" name="date_from" 
                       value="{{ request.query_params.get('date_from', '') }}">
            </div>
            
            <div class="filter-group">
                <label for="date-to-filter">To:</label>
                <input type="datetime-local" id="date-to-filter" name="date_to" 
                       value="{{ request.query_params.get('date_to', '') }}">
            </div>
        </div>
        
        <div class="filter-actions">
            <button type="submit" class="button-primary">Apply Filters</button>
            <a href="{{ url_for('ui_message_history') }}" class="button-secondary">Clear Filters</a>
        </div>
    </form>
    
    <div class="tasks-summary">
        <p>Showing {{ total_conversations }} conversation{% if total_conversations != 1 %}s{% endif %}
        {% if active_filters %}
            with filters:
            {% if request.query_params.get('interface_type') %}
                <span class="filter-tag">Interface: {{ request.query_params.get('interface_type') }}</span>
            {% endif %}
            {% if request.query_params.get('conversation_id') %}
                <span class="filter-tag">Conversation: {{ request.query_params.get('conversation_id') }}</span>
            {% endif %}
            {% if request.query_params.get('date_from') or request.query_params.get('date_to') %}
                <span class="filter-tag">Date Range</span>
            {% endif %}
        {% endif %}
        </p>
    </div>

    {% if paged_conversations %}
        {% for conversation_key, turns_list in paged_conversations %} {# Iterate over paginated conversations #}
        <div class="chat-group">
            <div class="chat-header">Conversation: {{ conversation_key }}</div>
            {% for turn_display_obj in turns_list %}
                <div class="turn-group">
                    {# --- Display Initiating User Message (if exists for this turn object) --- #}
                    {% if turn_display_obj.initiating_user_message %}
                        {% set message = turn_display_obj.initiating_user_message %}
                        {% include 'partials/message_display.html' %}
                    {% endif %}

                    {# --- Display Final Assistant Response (if exists for this turn object AND different from initiating message) --- #}
                    {% if turn_display_obj.final_assistant_response and turn_display_obj.final_assistant_response != turn_display_obj.initiating_user_message %}
                        {% set message = turn_display_obj.final_assistant_response %}
                        {% include 'partials/message_display.html' %}
                    {% endif %}

                    {# --- System message if a turn_id group has neither primary user nor assistant message to show --- #}
                    {% if not turn_display_obj.initiating_user_message and not turn_display_obj.final_assistant_response %}
                        <div class="message system-message">
                            <div class="message-meta">Intermediate processing (Turn ID: {{ turn_display_obj.turn_id or 'None' }})</div>
                        </div>
                    {% elif turn_display_obj.initiating_user_message and not turn_display_obj.final_assistant_response and turn_display_obj.initiating_user_message.get('role') == 'user' %}
                         <div class="message system-message">
                            <div class="message-meta">No distinct final assistant response generated for this user input (Turn ID: {{ turn_display_obj.turn_id or 'None' }}). See trace.</div>
                        </div>
                    {% endif %}

                    {# --- Collapsible Trace --- #}
                    <details class="turn-trace">
                        <summary>Show full trace ({{ turn_display_obj.all_messages_in_group | length }} message{{ 's' if turn_display_obj.all_messages_in_group | length != 1 else '' }}, Turn ID: {{ turn_display_obj.turn_id or 'None' }})</summary>
                        <div class="turn-trace-content">
                            {% for message in turn_display_obj.all_messages_in_group %}
                                {% include 'partials/message_display.html' %}
                            {% endfor %}
                        </div>
                    </details>
                </div>
            {% endfor %}
        </div>
        {% else %} 
        <p>No messages found in this conversation group.</p>
        {% endfor %}
    {% else %}
        <p>No message history found.</p>
    {% endif %}

    {% if pagination and pagination.total_pages|default(0, True) > 1 %}
    <nav class="pagination">
        {% if pagination.has_prev %}
        <a href="?page={{ pagination.prev_num }}&per_page={{ pagination.per_page }}">&laquo; Previous</a>
        {% else %}
        <span class="disabled">&laquo; Previous</span>
        {% endif %}

        <span>Page {{ pagination.current_page }} of {{ pagination.total_pages }}</span>

        {% if pagination.has_next %}
        <a href="?page={{ pagination.next_num }}&per_page={{ pagination.per_page }}">Next &raquo;</a>
        {% else %}
        <span class="disabled">Next &raquo;</span>
        {% endif %}
    </nav>
    {% endif %}
{% endblock %}

{% block scripts_extra %}
<!-- Load message history filter script -->
<script src="{{ url_for('static', path='js/message_history_filters.js') }}"></script>

<!-- Load vanilla-jsoneditor -->
<script type="module">
    import { createJSONEditor } from 'https://unpkg.com/vanilla-jsoneditor/standalone.js';
    import { createJSONEditorWithCopy } from '{{ url_for('static', path='js/json_editor_copy.js') }}';

    function initializeEditor(targetId, jsonData, buttonText = 'Copy JSON') {
        const target = document.getElementById(targetId);
        if (!target) {
            console.warn(`Target element with ID '${targetId}' not found`);
            return;
        }
        let content = { json: undefined, text: undefined };
        let dataForCopy = jsonData; // Store original data for copy button
        
        if (typeof jsonData === 'object' && jsonData !== null) {
             content.json = jsonData;
        } else if (typeof jsonData === 'string') {
            try {
                content.json = JSON.parse(jsonData);
                dataForCopy = content.json; // Use parsed JSON for copy
            } catch (e) {
                 console.warn(`Data for ${targetId} is not valid JSON, displaying as text:`, jsonData);
                 content.text = jsonData;
                 dataForCopy = jsonData; // Copy as string if not valid JSON
            }
        } else {
             console.warn(`Invalid data type for ${targetId}, displaying as text:`, jsonData);
             content.text = String(jsonData);
             dataForCopy = String(jsonData);
        }

        if (content.json === undefined && content.text === undefined) {
            target.textContent = '(No data)';
            return;
        }

        try {
            target.textContent = ''; // Clear target before initializing
            createJSONEditorWithCopy(createJSONEditor, {
                target: target,
                props: {
                    content,
                    readOnly: true,
                    mainMenuBar: false,
                    navigationBar: false,
                    statusBar: false,
                }
            }, dataForCopy, buttonText);
            console.log(`JSON editor initialized for ${targetId}`);
        } catch (error) {
             console.error(`Failed to initialize JSONEditor for ${targetId}:`, error);
             target.textContent = `Error loading JSON Viewer: ${error.message}. Data: ${JSON.stringify(jsonData, null, 2)}`;
        }
    }

    // Initialize all JSON editors after DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        // Find all JSON editor containers and initialize them
        const containers = document.querySelectorAll('.json-editor-container');
        containers.forEach(container => {
            const targetId = container.id;
            if (!targetId) {
                console.warn('JSON editor container found without ID');
                return;
            }
            
            // Extract JSON data from data attribute if present
            const jsonDataAttr = container.getAttribute('data-json');
            if (jsonDataAttr) {
                try {
                    const jsonData = JSON.parse(jsonDataAttr);
                    initializeEditor(targetId, jsonData);
                } catch (e) {
                    console.error(`Failed to parse JSON data for ${targetId}:`, e);
                    container.textContent = 'Error: Invalid JSON data';
                }
            } else {
                console.warn(`No data-json attribute found for container ${targetId}`);
                container.textContent = '(No data)';
            }
        });
    });

    // Template-generated initializations for specific data
    {% if paged_conversations %}
    document.addEventListener('DOMContentLoaded', function() {
        {% for conversation_key, turns_list in paged_conversations %}
            {% for turn_display_obj in turns_list %}
                {% for message in turn_display_obj.all_messages_in_group %}
                {% if message.role == 'assistant' and message.tool_calls %}
                    {% for tool_call in message.tool_calls %}
        initializeEditor('tool-args-{{ conversation_key }}-{{ message.turn_id or 'no_turn' }}-{{ message.internal_id }}-{{ loop.index }}', {{ tool_call.get('function', {}).get('arguments') | tojson | safe }}, 'Copy Arguments');
                    {% endfor %}
                {% endif %}
                {% if message.reasoning_info %}
        initializeEditor('reasoning-{{ conversation_key }}-{{ message.turn_id or 'no_turn' }}-{{ message.internal_id }}', {{ message.reasoning_info | tojson | safe }}, 'Copy Reasoning');
                {% endif %}
                {% endfor %}
            {% endfor %}
        {% endfor %}
    });
    {% endif %}
</script>
{% endblock %}
