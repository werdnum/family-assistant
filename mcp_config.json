{
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Australia/Sydney"]
    },
    "browser": {
      "command": "deno",
      "args": [
        "run",
        "-A",
        "npm:@playwright/mcp@latest",
        "--headless",
        "--browser",
        "chromium"
       ]
    },
    "brave": {
      "command": "deno",
      "args": [
        "run",
        "--allow-net",
        "--allow-env",
        "npm:@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "$BRAVE_API_KEY"
      }
    },
    "python": {
      "command": "deno",
      "args": [
        "run",
        "-N",
        "-R=node_modules",
        "-W=node_modules",
        "--node-modules-dir=auto",
        "jsr:@pydantic/mcp-run-python",
        "stdio"
      ]
    },
    "homeassistant": {
      "transport": "sse",
      "url": "https://homeassistant.andrewgarrett.dev/mcp_server/sse",
      "token": "$HOMEASSISTANT_API_KEY"
    },
    "scrape": {
      "command": "uv",
      "args": [
        "run",
        "contrib/scrape_mcp.py"
      ]
    },
    "google-maps": {
      "command": "deno",
      "args": ["run", "--allow-net", "--allow-env", "npm:@modelcontextprotocol/server-google-maps"],
      "env": {
        "GOOGLE_MAPS_API_KEY": "$GOOGLE_MAPS_API_KEY"
      }
    },
    "kubernetes": {
      "command": "deno",
      "args": ["run", "-A", "npm:mcp-server-kubernetes"],
      "env": {
        "KUBECONFIG": "$KUBECONFIG",
        "KUBECONTEXT": "$KUBECONTEXT",
        "HOME": "$HOME",
        "PATH": "$PATH"
      }
    }
  }
}
