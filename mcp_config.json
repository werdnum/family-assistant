{
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Australia/Sydney"]
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "brave": {
      "command": "deno",
      "args": [
        "run",
        "-A",
        "npm:@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "$BRAVE_API_KEY"
      }
    },
    "python": {
      "command": "deno",
      "args": [
        "run",
        "-N",
        "-R=node_modules",
        "-W=node_modules",
        "--node-modules-dir=auto",
        "jsr:@pydantic/mcp-run-python",
        "stdio"
      ]
    },
    "homeassistant": {
      "transport": "sse",
      "url": "https://homeassistant.alexsmith.dev/mcp_server/sse",
      "token": "$HOMEASSISTANT_API_KEY" # Use dedicated token field, still referencing env var
      # "env" is now only used for stdio transport environment variables
    }
  }
}
