{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash .claude/session-start-hook.sh",
            "timeout": 300000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash .claude/stop-feedback-hook.sh",
            "timeout": 300000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/env python3 .claude/check_banned_commands.py"
          },
          {
            "type": "command",
            "command": "/usr/bin/env python3 .claude/check_main_branch_commit.py"
          },
          {
            "type": "command",
            "command": "/bin/bash .claude/test-verification-hook.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "/usr/bin/env python3 .claude/review-hook.py",
            "timeout": 300
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit|Update",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/env python3 .claude/format-files.py"
          },
          {
            "type": "command",
            "command": "/usr/bin/env python3 .claude/lint-hook.py",
            "timeout": 15000
          }
        ]
      }
    ]
  }
}
