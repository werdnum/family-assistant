{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash .claude/session-start-hook.sh",
            "timeout": 300000
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "bash-guard@werdnum-plugins": true,
    "format-and-lint@werdnum-plugins": true,
    "guardian@werdnum-plugins": true,
    "development-agents@werdnum-plugins": true,
    "python-utils@werdnum-plugins": true,
    "pyright-lsp@werdnum-plugins": true
  },
  "extraKnownMarketplaces": {
    "werdnum-plugins": {
      "source": {
        "source": "github",
        "repo": "werdnum/claude-code-plugins"
      }
    }
  }
}
